[help]
    autocorrect = immediate

[rerere]
    enabled = true

[pretty]
    nice = " %C(yellow)%h%C(reset) %<(50,trunc)%-s %C(green)%cr"
    gh = " %<(64,trunc)%-s %C(yellow)%h%C(reset)%n\
        %C(blue)@%an%C(reset) commited %C(green)%cr%C(reset) %(describe:match=HEAD)"

[alias]
    l = log --pretty=nice -n 15
    s = status -bs
    d = !"git diff -D -- $* | $EDITOR +'set bt=nofile bh=hide' +'nmap q <cmd>quit!<cr>' # "

    branches = branch --all
    remotes = remote --verbose

[advice]
    addIgnoredFile = false

[apply]
    whitespace = fix

[pager]
    log = false

[color]
    # pager = false

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = green
    changed = red
    untracked = default

[diff]
    context = 2
    noprefix = true
    relative = true
    algorithm = minimal

[merge]
    tool = nvimdiff

[mergetool "vimdiff"]
    layout = REMOTE/@LOCAL

[mergetool "nvimdiff"]
