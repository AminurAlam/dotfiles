[pretty]
    nice = "  %C(yellow)%h%C(reset) - %<(50,trunc)%-s %C(green)%cr"

[help]
    autocorrect = immediate

[alias]
    l = log --pretty=nice -n 15
    s = status -bs
    d = !"git diff -- $1 | $EDITOR +'set bt=nofile bh=hide' # "

    tags = tag -l
    branches = branch --all
    remotes = remote --verbose

[apply]
    whitespace = fix

[pager]
    log = false

[color]
    # pager = false

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = green
    changed = red
    untracked = default

[merge]
    tool = nvimdiff

[mergetool "vimdiff"]
    layout = @LOCAL,REMOTE

[mergetool "nvimdiff"]
    layout = @LOCAL,REMOTE

