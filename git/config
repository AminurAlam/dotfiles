    email = 64137875+AminurAlam@users.noreply.github.com

[credential]
    username = AminurAlam
    helper = "cache --timeout 604800"

[help]
    autocorrect = immediate

[rerere]
    enabled = true

[alias]
    l = log --pretty=nice -n 10
    s = status -bs
    d = !"git diff -- $* | $EDITOR +'set bt=nofile bh=hide' +'nmap q <cmd>quit!<cr>' # "

    bls = branch --all
    rls = remote --verbose
    unadd = reset

[advice]
    addIgnoredFile = false

[apply]
    whitespace = fix

[pager]
    log = false

### looks

[pretty]
    nice = " %C(yellow)%h%C(reset) %<(54,trunc)%-s %C(green)%cd"
    gh = " %<(64,trunc)%-s %C(yellow)%h%C(reset)%n\
        %C(blue)@%an%C(reset) commited %C(green)%cr%C(reset) %(describe:match=HEAD)"

[log]
    date = short

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = green
    changed = red
    untracked = default

### diff and merge

[diff]
    context = 2
    noprefix = true
    relative = true
    algorithm = minimal

[merge]
    tool = nvimdiff

[mergetool "vimdiff"]
    layout = REMOTE/@LOCAL

[mergetool "nvimdiff"]
    layout = REMOTE/@LOCAL

