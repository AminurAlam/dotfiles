# vim:ft=ini:
[general]
size = fullscreen
overlay = yes

[viewer]
window = #000000
antialiasing = mks13

[info.viewer]
top_left = none
bottom_left = +imagesize,+exif,scale,frame

[info.slideshow]
top_left = none
top_right = none
bottom_left = none
bottom_right = none

[keys.viewer]
h = step_left 10
l = step_right 10
k = step_up 10
j = step_down 10

KP_Add = zoom +10
KP_Subtract = zoom -10
s = zoom width
Equal = zoom fit

ScrollLeft = step_left 1
ScrollRight = step_right 1
ScrollUp = step_up 1
ScrollDown = step_down 1
Ctrl+ScrollUp = zoom +3
Ctrl+ScrollDown = zoom -3

[keys.gallery]
h = step_left
l = step_right
k = step_up
j = step_down
