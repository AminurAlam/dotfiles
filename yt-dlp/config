-P "subtitle:$XDG_VIDEOS_DIR/yt/subs/"
-P "thumbnail:$XDG_VIDEOS_DIR/yt/thumb/"
-o "%(channel&{} - |)s%(title)s.%(ext)s"
--no-overwrites
--continue
