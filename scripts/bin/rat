#!/usr/bin/env fish

cd "/sdcard/Tachi/downloads/HentaiNexus (EN)/"
set chapter (path basename "$argv[1]")
[ -e "$chapter" ] || exit

set artist (unzip -p $chapter/Chapter_*.cbz ComicInfo.xml | rg --only-matching --replace '$1' '<Penciller>(.*)</Penciller>')

mv -iv "$chapter" "@$artist - $chapter"
