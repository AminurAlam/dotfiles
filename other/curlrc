### use -q, --disable to disable this config

# Display a simple progress bar
progress-bar

# Automatic use of bold font when writing HTTP headers (-I)
styled-output

# message
# write-out = "%{filename_effective}: %{size_download} bytes [%{http_code}]\n"

# Save output to filename from Content-Disposition
remote-header-name

# Follow redirects
location

# Sends the "Referrer Page" information to the HTTP server
referer = ";auto"

# Specify the User-Agent string to send to the HTTP server
user-agent = "Mozilla/5.0 (compatible)"

# Wait 60 seconds before timing out.
connect-timeout = 60

# Extra header to include in information sent
-H "Upgrade-Insecure-Requests: 1"
