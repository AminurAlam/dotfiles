# vim: set ft=config :
# https://newsboat.org/releases/2.31/docs/newsboat.html

include "~/.config/newsboat/colorscheme"
include "~/.config/newsboat/bindings"
error-log "~/.local/cache/newsboat-errors.log"

# title style
show-title-bar "yes"
feedlist-title-format "        Articles: %U  Feeds: %u  %T"
articlelist-title-format "    %4u/%-4t    %T"
itemview-title-format ""
urlview-title-format ""

# list style
datetime-format "%m-%d"
feedlist-format " [%4U] %t %S"
articlelist-format "%?n? â€¢?%?T? %12T? %t" # unread ? dot : null ; group ? groupname : none ; title

# filters
ignore-article "*" "title =~ \" (Open)?AI\""
ignore-article "*" "title =~ \" (Chat)?GPT \""
ignore-article "*" "title =~ \" LLM \""
ignore-mode "display"

reload-threads 10
scrolloff 8
goto-next-feed "no"
prepopulate-query-feeds "yes"
show-keymap-hint "no"
show-read-feeds "no"
wrap-scroll "yes"

browser "termux-open %u &"
# pager "nvim +'set ft=article'"
